<h1><%= @cocktail.name %></h1>

<ul>
  <% @cocktail.doses.each do |dose| %>
    <li>
      <%= dose.description %>
      <%= dose.ingredient.name %>
    </li>
    <%= link_to "Delete a dose", dose_path(dose),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
  <% end %>
</ul>


<%= link_to 'back', cocktails_path %>

<%= link_to 'Add a new dose', new_cocktail_dose_path(@cocktail) %>






